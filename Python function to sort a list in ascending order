def sort_list(list1):
    """
    This function sorts a list in ascending order.
    For example: sort_list([5, 2, 8, 1, 3]) will return [1, 2, 3, 5, 8].
    """
    list1.sort()
    return list1

# Example usage
my_list = [5, 2, 8, 1, 3]
sorted_list = sort_list(my_list)
print(f"The sorted list is: {sorted_list}")

# 9. Python function to count the number of vowels in a string.
def count_vowels(text):
  """
  This function counts the number of vowels in a string.
  Vowels are the letters A, E, I, O, U.
  For example: count_vowels("hello world") will return 3.
  """
  vowels = "aeiouAEIOU"
  count = 0
  for char in text:
    if char in vowels:
      count += 1
  return count
